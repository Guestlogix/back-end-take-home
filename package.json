{
    "name": "guestlogix-coding-challenge",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "engines": {
        "node": ">=8.15"
    },
    "scripts": {
        "build": "tsc",
        "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
        "prod": "export NODE_ENV=production || SET NODE_ENV=production && yarn build && node ./build/index.js",
        "test": "export NODE_ENV=testing || SET NODE_ENV=testing && jest --coverage --verbose"
    },
    "jest": {
        "verbose": true,
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**"
        ],
        "coveragePathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/src/config",
            "<rootDir>/src/index.ts"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "dependencies": {
        "csvtojson": "^2.0.8",
        "express": "^4.16.4",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/jest": "^24.0.12",
        "@types/node": "^12.0.0",
        "@types/supertest": "^2.0.7",
        "jest": "^24.8.0",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node-dev": "^1.0.0-pre.35",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5"
    }
}
